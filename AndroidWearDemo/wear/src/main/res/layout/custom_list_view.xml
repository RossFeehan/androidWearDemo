<?xml version="1.0" encoding="utf-8"?>
<com.ross.feehan.londontubelinestatus.WearableListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tubeLineIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tubeLineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tubeLineIV"
            android:textSize="18dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tubeLineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tubeLineIV"
            android:layout_below="@id/tubeLineName"
            android:textColor="#000000"/>

    </RelativeLayout>

</com.ross.feehan.londontubelinestatus.WearableListItemLayout>